
<h1><%= @post.content %></h1>
<!-- Render the post's interests -->
<%= render 'post_interests/post_interest', post: @post %>
<!-- Form for adding a new interest to the post -->
<% if @post.user == current_user %>
  <%= render 'post_interests/form', post: @post %>
 <% end %>

<h2>Likes</h2>
<p>Likes <%= @post.likes.count %></p>
<% if user_signed_in? %>
  <% if current_user.likes.exists?(post: @post) %>
    <%= button_to 'Unlike', post_like_path(@post), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= button_to 'Like', post_like_path(@post), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Back to Posts', posts_path %>



<div class="copy-to-clipboard" data-controller="clipboard">
  <button data-action="clipboard#copy">Share</button>
</div>







