<h1>New Post</h1>
<%= render 'shared/flash_messages' %>
<%= form_with(model: @post, url: posts_path, method: :post, local: true) do |form| %>

  <div class="field">
    <%= form.label :caption %>
    <%= form.text_field :caption %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
