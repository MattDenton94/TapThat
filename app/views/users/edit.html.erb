<div class="edit-profile-container">
  <h1>Edit Profile</h1>
  <%= form_with(model: @user, url: user_path(@user), method: :patch, local: true, class: 'edit-profile-form') do |f| %>
    <div class="form-group">
      <%= f.label :profile_picture_url, "Profile Picture URL" %>
      <%= f.text_field :profile_picture_url, class: 'form-control', placeholder: 'Enter profile picture URL' %>
    </div>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name' %>
    </div>

    <div class="form-group">
      <%= f.label :username, "Username" %>
      <%= f.text_field :username, class: 'form-control', placeholder: 'Enter your username' %>
    </div>

    <div class="form-group">
      <%= f.label :bio, "Bio" %>
      <%= f.text_area :bio, class: 'form-control', placeholder: 'Write something about yourself', rows: 3 %>
    </div>

    <div class="form-actions">
      <%= f.submit "Save Changes", class: 'btn btn-primary' %>
      <%= link_to 'Cancel', user_path(@user), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
